<h1>Show refugee</h1>
  <!--profile(names, origin country, languages), story, status(connected), edit button  -->

  <div class="refugee">
    <form action="/charge" method="POST" id="payment-form">
      <span class="payment-errors"></span>
      <div class="form-row">
        <label>
          <span>refugee</span>
          <input id="refugeeId" type="hidden" size="20"  name="refugeeId"/>
        </label>
      </div>
      <div class="form-row">
        <label>
          <span>Amount</span>
          <input type="text" size="20" name="amount"/>
        </label>
      </div>
      <div class="form-row">
        <label>
          <span>Card Number</span>
          <input type="text" size="20" data-stripe="number"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>CVC</span>
          <input type="text" size="4" data-stripe="cvc"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Expiration (MM/YYYY)</span>
          <input type="text" size="2" data-stripe="exp-month"/>
        </label>
        <span> / </span>
        <input type="text" size="4" data-stripe="exp-year"/>
      </div>

      <button type="submit">Submit Payment</button>
    </form>
  </div>

  