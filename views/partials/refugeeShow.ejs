    <div class="container payment-form">
    <form action="/charge" method="POST" id="payment-form">
      <span class="payment-errors"></span>
      <div class="form-row">
        <label>
          <span>refugee</span>
          <input id="refugeeId" type="hidden" size="20"  name="refugee"/>
