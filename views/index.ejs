    <!-- donationForm -->
    <section id="donationForm">
      <!-- form, depend on stripes, share on social media button  -->
      <form action="/charge" method="POST" id="payment-form">
        <span class="payment-errors"></span>

        <div class="form-row">
          <label>
            <span>Card Number</span>
            <input type="text" size="20" data-stripe="number"/>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>CVC</span>
            <input type="text" size="4" data-stripe="cvc"/>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Expiration (MM/YYYY)</span>
            <input type="text" size="2" data-stripe="exp-month"/>
          </label>
          <span> / </span>
          <input type="text" size="4" data-stripe="exp-year"/>
        </div>

        <button type="submit">Submit Payment</button>
      </form>
    </section>
    <!-- charityHome -->
    <section id="charityHome">
    <% include partials/charityHome %>
    </section>
    <!-- add refugee -->
    <section id="addRefugee">
        <h3>Add a refugee profile</h3>
          <!-- profile(names, origin country, languages), story, add button(for charity)  -->
          <form id="refugee" method="post" action="/refugees" enctype="multipart/form-data">

       <div class="form-group">
         <label for="address1">Address</label>
         <input name="refugee[address1]" type="text" class="form-control" id="address1" placeholder="address">
       </div>
       <div class="form-group">
         <label for="name">name</label>
         <input name="refugee[name]" type="text" class="form-control" id="name" placeholder="name">
       </div>
       <div class="form-group">
         <label for="city">City</label>
         <input name="refugee[city]" type="text" class="form-control" id="city" placeholder="city">
       </div>
       <div class="form-group">
         <label for="postcode">Postcode</label>
         <input name="refugee[postcode]" type="text" class="form-control" id="postcode" placeholder="postcode">
       </div>
       <div class="form-group">
         <label for="lat">Latitude AUTOMATIC</label>
         <input name="refugee[lat]" type="text" class="form-control" id="lat" placeholder="lat">
       </div>
       <div class="form-group">
         <label for="lng">Longitude AUTOMATIC</label>
         <input name="refugee[lng]" type="text" class="form-control" id="lng" placeholder="lng">
       </div>
       <button type="submit" class="btn btn-primary" role="button">Submit</button>
       <h4>Map</h4>
       <div id="refugee-map"></div>
       </form>
    </section>
